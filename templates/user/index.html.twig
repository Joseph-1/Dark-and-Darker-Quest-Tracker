{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-120">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8 w-full max-w-[1200px] mx-auto">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        {{ knp_pagination_sortable(users, 'ID', 'u.id') }}
                    </th>
                    <th scope="col" class="px-6 py-3">
                        {{ knp_pagination_sortable(users, 'Nickname', 'u.nickname') }}
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Email
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Roles
                    </th>
                    <th scope="col" class="px-6 py-3">
                        IsVerified
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                        <td scope="row" class="px-6 py-4 dark:text-white">
                            {{ user.id }}
                        </td>
                        <td class="px-6 py-4">
                            {{ user.nickname }}
                        </td>
                        <td class="px-6 py-4">
                            {{ user.email }}
                        </td>
                        <td class="px-6 py-4">
                            {{ user.roles ? user.roles|json_encode : '' }}
                        </td>
                        <td class="px-6 py-4">
                            {{ user.isVerified ? 'Yes' : 'No' }}
                        </td>
                        <td class="px-6 py-4">
                                <a href="{{ path('user_show', {'id': user.id}) }}" class="btnShow text-white">show</a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btnUpdate text-white">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="my-4">
            <a href="{{ path('user_new') }}" class="btn text-white">Create new</a>
        </div>

        <div class="mb-4">
            {{ knp_pagination_render(users) }}
        </div>
    </div>
{% endblock %}
