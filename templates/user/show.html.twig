{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-60 min-w-120">
    <h1 class="my-4">User</h1>

            <p class="text-white">Id :</p>
            <p class="mb-2">{{ user.id }}</p>

            <p class="text-white mr-4">Nickname :</p>
            <p class="mb-2">{{ user.nickname }}</p>

            <p class="text-white">Email :</p>
            <p class="mb-2">{{ user.email }}</p>

            <p class="text-white">Roles :</p>
            <p class="mb-2">{{ user.roles ? user.roles|json_encode : '' }}</p>

            <p class="text-white">IsVerified :</p>
            <p class="mb-2">{{ user.isVerified ? 'Yes' : 'No' }}</p>

    <div class="btn">
        <a href="{{ path('user_index') }}">Back to list</a>
    </div>

    <div class="btnUpdate">
        <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
