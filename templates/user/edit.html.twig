{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

<div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-60 min-w-120">
    <h1 class="my-4">Edit User</h1>
    {{ form_start(editForm) }}
    {{ form_row(editForm.nickname) }}
    {{ form_row(editForm.email) }}
    {{ form_row(editForm.roles) }}
    <div class="btn">
        <button class="btn" type="submit">Send</button>
    </div>
    {{ form_end(editForm) }}

    <div class="btn">
        <a href="{{ path('user_index') }}">Back to list</a>
    </div>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
