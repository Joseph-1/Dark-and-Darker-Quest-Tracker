{% extends 'base.html.twig' %}

{% block title %}Quest index{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-120 min-w-120">
    <div class="text-center">
        <h1 class="!text-gray-300 my-4">Quests</h1>
    </div>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8 w-full max-w-[1200px] mx-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
            <th scope="col" class="px-6 py-3">
                Merchant
            </th>
            <th scope="col" class="px-6 py-3">
                {{ knp_pagination_sortable(quests, 'Name', 'q.name') }}
            </th>
            <th scope="col" class="px-6 py-3">
                {{ knp_pagination_sortable(quests, 'Map', 'q.map') }}
            </th>
            <th scope="col" class="px-6 py-3">
                Objective
            </th>
            <th scope="col" class="px-6 py-3">
            </th>
            {% if is_granted('ROLE_CONTRIBUTOR') and is_granted("IS_AUTHENTICATED_FULLY") %}
                <th scope="col" class="px-6 py-3">
                    actions
                </th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for quest in quests %}
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                <td scope="row" class="px-6 py-4 dark:text-white">
                    <img
                        src="{{ vich_uploader_asset(quest.merchant, 'imageFile') }}"
                        alt="{{ quest.merchant.name }}"
                        class="max-w-[60px] max-h-[60px] object-cover w-full h-full rounded-2xl"
                    >
                </td>
                <td class="px-6 py-4 max-w-20">
                    {{ quest.name }}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 rounded {{ quest.mapColorClass }}">
                        {{ quest.map|title }}
                    </span>
                </td>
                <td class="px-6 py-4">
                    {{ quest.objective|nl2br|highlight_rarity }}
                </td>
                <td class="py-4 text-center align-middle w-64">
                    {% for questItem in quest.questItems %}
                        {% set item = questItem.item %}
                        {% set key = quest.id ~ '_' ~ item.id %}
                        {% set count = counts[key] is defined and counts[key] ? counts[key].count : 0 %}
                        <div class="flex items-center justify-center">
                            <img
                                src="{{ vich_uploader_asset(questItem.item, 'imageFile') }}"
                                alt="{{ questItem.item.name }}"
                                class="max-w-[30px] max-h-[30px]"
                            >
                        </div>
                            <div class="flex items-center justify-center gap-2 mb-2">
                            <form action="{{ path('item_count_decrement', { questId: quest.id, itemId: item.id }) }}" method="post">
                                <button type="submit" class="inline-flex items-center justify-center w-6 h-6 text-sm
                                font-bold text-gray-700 bg-transparent border border-gray-400 rounded-lg
                                transition-colors duration-200 hover:border-gray-900">-</button>
                            </form>
                            <span id="count-{{ key }}">{{ count }}</span>
                            / {{ questItem.requiredCount }}
                            <form action="{{ path('item_count_increment', { questId: quest.id, itemId: item.id }) }}" method="post">
                                <button type="submit" class="inline-flex items-center justify-center w-6 h-6 text-sm
                                font-bold text-gray-700 bg-transparent border border-gray-400 rounded-lg
                                transition-colors duration-200 hover:border-gray-900">+</button>
                            </form>
                        </div>
                    {% endfor %}
                </td>
                {% if is_granted('ROLE_CONTRIBUTOR') and is_granted("IS_AUTHENTICATED_FULLY") %}
                    <td class="px-6 py-4">
                        <div class="flex space-x-2">
                                <a href="{{ path('quest_edit', {slug: quest.slug}) }}" class="btnUpdate text-white mb-4">edit</a>
                        </div>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    {% if is_granted('ROLE_CONTRIBUTOR') and is_granted("IS_AUTHENTICATED_FULLY") %}
        <div class="my-4">
            <a href="{{ path('quest_new') }}" class="btn text-white">Create new</a>
        </div>
    {% endif %}

    <div class="mb-4">
        {{ knp_pagination_render(quests) }}
    </div>
</div>
{% endblock %}
