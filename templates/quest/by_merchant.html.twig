{% extends 'base.html.twig' %}

{% block title %}Merchant Quest{% endblock %}

{% block body %}


<div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-60 min-w-120">

    <h1 class="text-2xl font-bold my-4">Quest for {{ merchant.name }} :</h1>


    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8 w-full max-w-[1200px] mx-auto mb-6">
        {% if quests is empty %}
            <p>No quest found.</p>
        {% else %}
            <ul class="space-y-2">
                {% for quest in quests %}
                    <li class="bg-gray-800 text-white p-4 rounded-md">
                            {{ quest.name }} â€“
                        <span class="px-2 py-1 rounded {{ quest.mapColorClass }}">
                            {{ quest.map }}
                        </span>
                        <div class="mt-4">
                            <a href="{{ path('quest_show', {slug: quest.slug}) }}" class="btnShow">
                                Show Quest
                            </a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>

{% endblock %}
