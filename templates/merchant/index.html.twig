{% extends 'base.html.twig' %}

{% block title %}Merchant index{% endblock %}

{% block body %}
    <h1>Merchant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for merchant in merchants %}
            <tr>
                <td>{{ merchant.id }}</td>
                <td>{{ merchant.name }}</td>
                <td>{{ merchant.picture }}</td>
                <td>{{ merchant.slug }}</td>
                <td>
                    <a href="{{ path('merchant_show', {'id': merchant.id}) }}">show</a>
                    <a href="{{ path('merchant_edit', {'id': merchant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('merchant_new') }}">Create new</a>
{% endblock %}
