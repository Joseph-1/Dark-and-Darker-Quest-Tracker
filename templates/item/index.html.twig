{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-120">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8 w-full max-w-[900px] mx-auto">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                </th>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Rarity
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 border-gray-200">
                <td scope="row" class="px-6 py-4 flex justify-center items-center font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    <img class="max-w-[60px] max-h-[60px] object-contain" src="{{ vich_uploader_asset(item) }}" alt="{{ item.name }}">
                </td>
                <td class="px-6 py-4">
                    {{ item.name }}
                </td>
                <td class="px-6 py-4">
                    {{ item.rarity }}
                </td>
                <td class="px-6 py-4">
                    <div class="btnShow">
                        <a href="{{ path('item_show', {slug: item.slug}) }}">show</a>
                    </div>
                    {% if is_granted('ROLE_CONTRIBUTOR') and is_granted("IS_AUTHENTICATED_FULLY") %}
                        <div class="btnUpdate">
                            <a href="{{ path('item_edit', {slug: item.slug}) }}">edit</a>
                        </div>
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% if is_granted('ROLE_CONTRIBUTOR') and is_granted("IS_AUTHENTICATED_FULLY") %}
        <div class="btn mb-8">
            <a href="{{ path('item_new') }}">Create new</a>
        </div>
    {% endif %}
</div>


{% endblock %}
