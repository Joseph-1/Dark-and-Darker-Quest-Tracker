{% extends 'base.html.twig' %}

{% block title %}Rarity index{% endblock %}

{% block body %}
    <h1>Rarity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rarity in rarities %}
            <tr>
                <td>{{ rarity.id }}</td>
                <td>{{ rarity.name }}</td>
                <td>{{ rarity.color }}</td>
                <td>
                    <a href="{{ path('rarity_show', {'id': rarity.id}) }}">show</a>
                    <a href="{{ path('rarity_edit', {'id': rarity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rarity_new') }}">Create new</a>
{% endblock %}
