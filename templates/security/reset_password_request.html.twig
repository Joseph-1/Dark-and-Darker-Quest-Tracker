{% extends 'base.html.twig' %}

{% block title %}Forgotten Password Request{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-between bg-[#1E1E1E] mt-10 mx-70 rounded-xl shadow-2xl min-h-60 min-w-120">
    <h1 class="my-6">Forgotten Password</h1>
    {{ form_start(requestPassForm) }}
        {{ form_row(requestPassForm.email) }}
    <p>Please, enter your email to retrieve your password.</p>
    <div class="btn mb-4">
        <button class="btn" type="submit">Send</button>
    </div>
    {{ form_end(requestPassForm) }}
</div>
{% endblock %}
